form#createRequests-form.w-50(action='/dashboard/create-requests' method='post' novalidate='')
    .mb-5
        input#Quantity.form-control(name='quantity' type='number' placeholder='Quantity' required='')
    .mb-3
        label.me-2(for='registered-address') Registered Address
        input#registered-address.form-check-input.me-4(name='address-type' type='radio' value='registered' checked='')
        label.me-2(for='new-address') Add New Address
        input#new-address.form-check-input(name='address-type' type='radio' value='new')
    .mb-4
        //-Add the address field for the registered address
        #registered-address-field
            | 
            =user_details.address
        //-Add the address fields for the new address
        #new-address-fields(style='display: none;')
            input(type="hidden", name="newrequestaddress")
            input(type="text", name="" placeholder="Address" required='')
            label(for='new-address-textarea') New Address
            textarea#new-address-textarea.form-control(rows='3' name='address' placeholder='Address' required='')
    .btn.black-button-white-hover.rounded-pill(type='submit') Submit